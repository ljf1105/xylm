<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.popo.xylm.ui.activity.AgreementActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/startBack"
        android:id="@+id/tyView"/>
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/startBack"
        android:id="@+id/toolbar">
        <ImageView
            android:id="@+id/agback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/u1253"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="19sp"
            android:text="UnivStar服务使用协议"/>
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/argreRecycler"></android.support.v7.widget.RecyclerView>


</LinearLayout>
