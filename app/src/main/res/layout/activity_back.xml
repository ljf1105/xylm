<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/startBack"
    android:orientation="vertical"
    tools:context="com.example.popo.xylm.ui.activity.BackActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/backTool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/startBack">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/u1253"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="找回密码"
            android:textSize="19sp" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:text="验证手机号，快速找回密码"
        android:textSize="19sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/backPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/shap"
            android:hint="输入手机号" />

        <ImageView
            android:id="@+id/backErroy"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignRight="@id/backPhone"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/u1169"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/backPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/shap"
                android:hint="输入验证码" />

            <ImageView
                android:id="@+id/backErroy2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignRight="@id/backPassword"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/u1169"
               />

        </RelativeLayout>
        <Button
            android:id="@+id/getYzm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="#fff"
            android:background="@drawable/btn"/>
    </LinearLayout>

    <Button
        android:id="@+id/NextBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@drawable/btn"
        android:text="下一步"
        android:textColor="#fff" />
</LinearLayout>
