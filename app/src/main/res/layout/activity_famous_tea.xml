<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.popo.xylm.ui.activity.homeactivity.FamousTeaActivity">

    <include layout="@layout/toolbar" />

    <android.support.design.widget.TabLayout
        android:id="@+id/more_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/qianbai"
        app:tabIndicatorColor="#fff0"
        app:tabSelectedTextColor="@color/backs"
        app:tabTextColor="@color/labeText"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/more_viewPage"></android.support.v4.view.ViewPager>
</LinearLayout>
