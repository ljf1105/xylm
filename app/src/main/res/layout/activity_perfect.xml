<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/startBack"
    android:orientation="vertical"
    tools:context="com.example.popo.xylm.ui.activity.PerfectActivity">

    <View
        android:id="@+id/tyView"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/startBack" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/startBack">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="完善信息"
            android:textSize="19sp" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/argImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@mipmap/ic_launcher_round" />
        <ImageView
            android:id="@+id/addImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/u1288"
            android:layout_alignBottom="@id/argImage"
            android:layout_alignRight="@id/argImage"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/shap"
            android:hint="昵称" />

        <ImageView
            android:id="@+id/perEorry"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignRight="@id/name"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/u1169"
            android:visibility="gone" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/radiogp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/boy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/boygirl"
            android:button="@null"
            android:drawableLeft="@mipmap/u1283"
            android:drawablePadding="10dp"
            android:text="我是男生" />

        <RadioButton
            android:id="@+id/girl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/boygirl"
            android:button="@null"
            android:drawableLeft="@mipmap/u1282"
            android:drawablePadding="10dp"
            android:text="我是女生" />
    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/perPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/shap"
            android:hint="密码(必填)" />

        <ImageView
            android:id="@+id/perEorry2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignRight="@id/perPass"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/u1169"
            android:visibility="gone" />
    </RelativeLayout>

    <Button
        android:id="@+id/complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/btn"
        android:text="完成"
        android:textColor="#fff" />


</LinearLayout>
