<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/startBack"
    android:orientation="vertical"
    tools:context="com.example.popo.xylm.ui.activity.RegisterActivity">

    <ImageView
        android:id="@+id/reReturn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:src="@mipmap/u1253" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="center_horizontal"
        android:text="输入手机号，快速注册"
        android:textSize="19sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/shap"
            android:hint="输入手机号" />

        <ImageView
            android:id="@+id/registErroy"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignRight="@id/number"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/u1169"
            android:visibility="gone" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/shap"
                android:hint="输入验证码" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/registErroy2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignRight="@id/pass"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/u1169"
                />

        </RelativeLayout>
        <Button
            android:id="@+id/reGetYzm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="#fff"
            android:background="@drawable/btn"/>
    </LinearLayout>


    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/btn"
        android:text="注册"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/soap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="注册表示你同意  UnivStar服务使用协议" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="其他注册方式" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weixinRegist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/weixin" />

        <ImageView
            android:id="@+id/qqRegist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/qq" />

        <ImageView
            android:id="@+id/wbRegist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/weibo" />
    </LinearLayout>

</LinearLayout>
